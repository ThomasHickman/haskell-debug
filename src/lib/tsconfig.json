{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../../lib",
        "inlineSources": true,
        "inlineSourceMap": true,
        "strictNullChecks": true,
        "allowJs": false,
        "lib":["dom", "es2017"],
        "strict": true,
        "importHelpers": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots" : [
          "../../typings",
          "../../node_modules/@types"
        ],
        "types" : [
          "node",
          "atom",
          "atom-haskell-upi",
          "atom-select-list",
          "globals",
          "lodash"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**.ts",
        "**.tsx",
        "**.js",
        "./oldTypings/*.d.ts"
    ],
    "compileOnSave": true,
    "experimentalDecorators": true
}
